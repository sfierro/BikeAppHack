<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/activity_one">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageview"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Floor 1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/onetext"
        android:onClick="floorOne"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Floor 2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/onetext"
        android:id="@+id/twotext"
        android:onClick="floorTwo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Floor 3"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/twotext"
        android:id="@+id/threetext"
        android:onClick="floorThree"/>

</RelativeLayout>
